<view class="search_row">
  <input value="{{inpValue}}" placeholder="请输入你要搜索的商品" bindinput="handleInput"></input>
  <button bindtap="handleCancel" class="btn" hidden="{{!isFocus}}">取消</button>
</view>

<view class="search_content">
  <navigator url="/pages/goods_detail/goods_detail?goods_id={{item.goods_id}}" class="serch_item"
    wx:for="{{goods}}"
    wx:key="goods_id"
  >
    {{item.goods_name}}
  </navigator>
  
</view>